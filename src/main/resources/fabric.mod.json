{
  "schemaVersion": 1,
  "id": "sfcr",
  "version": "${version}",

  "name": "SuperFancyClouds: Refabricated",
  "description": "An unofficial fabric port of SuperFancyClouds that makes your Minecraft sky full of more stereoscopic and dynamic clouds.",
  "authors": [
    "Rimo"
  ],
  "contributors": [
	"ami-wishes"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/superfancyclouds-refabricated",
    "sources": "https://github.com/Rivmun/SuperFancyCloudsRefabricated",
    "issues": "https://github.com.Rivemun/SuperFancyCloudsRefabricated/issues"
  },

  "license": "MIT",
  "icon": "assets/sfcr/icon.png",

  "environment": "*",
  "entrypoints": {
	"main": [
	  "com.rimo.sfcr.SFCReMain"
	],
    "client": [
      "com.rimo.sfcr.SFCReClient"
    ],
    "server": [
	  "com.rimo.sfcr.SFCReServer"
	],
    "modmenu": [ 
      "com.rimo.sfcr.config.SFCReModMenuIntegration"
    ]
  },
  "mixins": [
    "sfcr.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.12",
    "fabric-api": "*",
    "minecraft": "~1.19.3",
    "java": ">=17",
    "cloth-config2":"*"
  },
  "suggests": {
    "modmenu": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.modrinth": "https://modrinth.com/mod/superfancyclouds-refabricated",
        "MCMOD.cn": "https://www.mcmod.cn/class/9053.html"
      }
    }
  }
}
